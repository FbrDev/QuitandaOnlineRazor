@page
@model ConfirmacaoEmailModel
@{
    ViewData["titulo"] = Model.StatusMessage;
}
<h1>@ViewData["titulo"]</h1>

<p>
    <b>@Model.StatusMessage</b>
    @if (Model.EmailConfirmado)
    {
        <span>Para fazer o login agora, <a href="/Login">clique aqui</a>.</span>
    }
    else
    {
        <span>Entre em contato com o suporte para obter maiores detalhes.</span>
    }
</p>

@if (Model.EmailConfirmado)
{
    <p>
        <a class="btn btn-outline-success" href="/Login">Clique aqui para fazer o login!</a>
    </p>
}
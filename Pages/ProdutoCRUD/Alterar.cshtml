@page "{id:int?}"
@model QuitandaOnline.Pages.ProdutoCRUD.AlterarModel
@{
    ViewData["titulo"] = "Alteração de Produto";
}

<main class="container mt-3">
    <div class="row justify-content-md-center">
        <div class="col-sm-12">
            <h1>@ViewData["titulo"]</h1>
            <hr />
            <form method="post" class="mt-3" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Produto.IdProduto" />

                <div class="form-group">
                    <label asp-for="Produto.Nome" class="control-label"></label>
                    <input asp-for="Produto.Nome" class="form-control col-6" />
                    <span asp-validation-for="Produto.Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Produto.Descricao" class="control-label"></label>
                    <textarea asp-for="Produto.Descricao" class="form-control col-6" rows="6"></textarea>
                    <span asp-validation-for="Produto.Descricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Produto.Preco" class="control-label"></label>
                    <input asp-for="Produto.Preco" class="form-control col-2" />
                    <span asp-validation-for="Produto.Preco" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Produto.Estoque" class="control-label"></label>
                    <input asp-for="Produto.Estoque" class="form-control col-2" />
                    <span asp-validation-for="Produto.Estoque" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImagemProduto" class="control-label"></label>
                    <div class="custom-file col-4 d-block">
                        <input asp-for="ImagemProduto" class="custom-file-input" accept="image/*" />
                        <label class="custom-file-label">Clique aqui para alterar a imagem.</label>
                    </div>
                    <span asp-validation-for="ImagemProduto" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <img src="@Model.CaminhoImagem" class="image-thumbnail" asp-append-version="true" style="max-height:300px;max-width:300px;border:solid 1px gray; border-radius:5px;" />
                </div>

                <div class="form-group text-left">
                    <a asp-page="./Listar" class="btn btn-info">Cancelar</a>
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @{
        await Html.RenderPartialAsync("_CustomConfirm");
    }
    @{
        await Html.RenderPartialAsync("_ConsultaCEP");
    }
    <script>
        $(document).ready(function () {
            $(".custom-file-input").change(function () {
                var arquivo = $(this).val().split("\\").pop();
                $(this).next(".custom-file-label").html(arquivo);
            });
        });
    </script>
}

